<!--Nav-->
<nav class="bg-black pt-2 md:pt-1 pb-1 px-1 mt-0 h-auto fixed w-full z-20 top-0">

  <div class="flex flex-wrap items-center">
    <div class="flex flex-shrink md:w-1/3 justify-center md:justify-start text-white">
      <%= link_to root_path do %>
        <%= image_pack_tag 'rails_vuejs_tailwindcss.png', width: "220", alt: "Logo" %>
      <% end %>
    </div>

    <div class="flex flex-1 md:w-1/3 justify-center md:justify-start text-white px-2">
                <span class="relative w-full">
                    <input type="search" placeholder="Search" class="w-full bg-gray-800 text-sm text-white transition border border-transparent focus:outline-none focus:border-gray-700 rounded py-1 px-2 pl-10 appearance-none leading-normal">
                    <div class="absolute search-icon" style="top: .5rem; left: .8rem;">
                        <svg class="fill-current pointer-events-none text-white w-4 h-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20">
                            <path d="M12.9 14.32a8 8 0 1 1 1.41-1.41l5.35 5.33-1.42 1.42-5.33-5.34zM8 14A6 6 0 1 0 8 2a6 6 0 0 0 0 12z"></path>
                        </svg>
                    </div>
                </span>
    </div>

    <div class="flex w-full pt-2 content-center justify-between md:w-1/3 md:justify-end">
      <ul class="list-reset flex justify-between flex-1 md:flex-none items-center">

        <li class="hoverable text-gray-400 hover:bg-custom hover:text-white">

          <a href="#" class="relative block py-6 px-4 lg:p-6 text-sm text-lg font-bold hover:bg-custom hover:text-white">
            <i class="fas fa-language"></i>
            <%= t(:language) %></a>
          <div class="mega-menu absolute max-w-xs mb-16 sm:mb-0 shadow-xl bg-custom" style="left: auto;width: 136px;">

            <ul class="list-reset">
              <li><%= link_to "Русский", {locale: :ru}, class: "relative block py-6 px-2 lg:p-6 text-sm text-lg font-bold" %></li>
              <li><%= link_to "Українська", {locale: :ua}, class: "relative block py-6 px-2 lg:p-6 text-sm text-lg font-bold" %></li>
            </ul>
          </div>

        </li>
        <li class="<% if current_user %>hoverable <% end %>text-gray-400 hover:bg-custom hover:text-white">
          <% if current_user %>
            <a href="#" class="relative block py-6 px-4 lg:p-6 text-sm text-lg font-bold hover:bg-custom hover:text-white">
              <i class="fas fa-user"></i>
              <%= current_user.email %></a>
            <div class="mega-menu absolute max-w-xs mb-16 sm:mb-0 shadow-xl bg-custom" style="left: auto;width: 203px;">

              <ul class="list-reset">
                <li><%= link_to t(:exit), logout_path, class: "relative block py-6 px-2 lg:p-6 text-sm text-lg font-bold" %></li>
              </ul>
            </div>
          <% else %>
            <%= link_to 'enter', class: "relative block py-6 px-2 lg:p-6 text-sm text-lg font-bold" do %>
              <i class="fas fa-door-open"></i>
              <%= t(:enter) %>
            <% end %>
          <% end %>

        </li>
      </ul>
    </div>
  </div>

</nav>

